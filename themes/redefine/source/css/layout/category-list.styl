.category-list-container {

  redefine-container(false, 0, 0, 30px, 0)

  .category-list-content {

    .all-category-list {

      display flex
      flex-wrap wrap

      li.all-category-list-item {
        font-size 1.2rem
        margin-bottom 15px
        box-shadow var(--redefine-box-shadow-flat)
        padding 10px
        border-radius $redefine-border-radius-medium
        margin 10px
        transition all 0.2s ease
        cursor pointer
        transform scaleX(1) scaleY(1)

        .all-category-list-link {
          &::before {
            padding-right 5px
            font-family "Font Awesome 6 Pro"
            content "\e0c0";
          }
        }

        &:hover,
        &:focus {
          //box-shadow var(--redefine-box-shadow-flat-hover) !important
          ////background-color var(--primary-color)
          //transition all 0.2s ease

          transform scaleX(1.05) scaleY(1.05)
          box-shadow var(--heer-box-shadow-flat-hover) !important
          transition all .3s cubic-bezier(0.4, 0, 1, 1)

          //a {
          //  color var(--background-color)
          //}
        }

        &:active {
          transform scale(0.95)
        }

        span.all-category-list-count {
          display inline-flex
          display -webkit-inline-flex
          color var(--third-text-color)
          margin-left 3px
          background-color var(--third-background-color)
          border-radius 50%
          font-size 1rem
          height 16px
          width 16px
          text-align center
          justify-content center
          align-items center
        }


        ul.all-category-list-child {

          //margin-left 10px
          //margin-top 15px

          li {
            margin-bottom 10px

            &:last-child {
              margin-bottom 0
            }

          }
        }
      }


    }

  }
}
