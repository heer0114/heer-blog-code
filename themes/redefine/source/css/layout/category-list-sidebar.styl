.sidebar-items .sidebar-category-list-content {

  .sidebar-all-category-list {

    li.sidebar-all-category-list-item {
      //font-size .98em
      margin-bottom 5px
      box-shadow var(--redefine-box-shadow-flat)
      padding 4px 15px
      border-radius $redefine-border-radius-medium
      margin-top 8px
      //transition all 0.2s ease
      cursor pointer
      animation ani01 1.5s

      .sidebar-all-category-list-link {
        //&::before {
        //  padding-right 5px
        //  font-family "Font Awesome 6 Pro"
        //  content "\e0c0"
        //  font-size 0.7rem!important
        //}
      }

      &:hover,
      &:focus {
        transform scaleX(1.02) scaleY(1.02)
        //box-shadow 0 8px 10px rgba(0, 0, 0, 0.2)
        box-shadow var(--redefine-box-shadow-flat-hover) !important
        transition all .2s cubic-bezier(0.4, 0, 1, 1)
      }

      //&:active {
      //  transform scale(0.98)
      //}

      span.sidebar-all-category-list-count {
        display inline-flex
        display -webkit-inline-flex
        color var(--third-text-color)
        margin-left 3px
        background-color var(--third-background-color)
        border-radius 50%
        font-size .8rem
        height 14px
        width 14px
        text-align center
        justify-content center
        align-items center
      }

      ul.sidebar-all-category-list-child {
        display none

        li {
          margin-bottom 5px
        }
      }

      //ul:last-child > li > ul:last-child .fa-book-open {
      //  //&:hover {
      //  //  color: var(--first-text-color)
      //  //}
      //  //&:hover .tooltiptext {
      //  //  visibility hidden
      //  //}
      //}
    }
  }

  //ul.sidebar-all-category-list > li > a {
  //  font-size 1em !important
  //  font-weight bold
  //}

  ul.sidebar-all-category-list i.fa-book-open {
    margin-right 5px
    font-size .95em

    &:hover {
      color: var(--primary-color)
    }

    &:hover .tooltiptext {
      visibility visible
    }
  }

  ul.sidebar-all-category-list i.fa-book-open > .tooltiptext {
    visibility hidden
    width 30px
    background-color: var(--first-text-color)
    color var(--selection-color)
    text-align center
    border-radius 6px
    padding 2px 0
    position absolute
    z-index 1
    bottom 150%
    //left: -154%;
    margin-left -8px
    font-size .8em

    &::after {
      content ""
      position absolute
      top 100%
      left 50%
      margin-left -5px
      border-width 5px
      border-style solid
      border-color var(--first-text-color) transparent transparent transparent
    }
  }
}

// 侧边栏 <i> 动画
@keyframes ani01 {
  0% {
    opacity: 0;
    transform: translate(20px, 0)
  }
  100% {
    opacity: 1;
    transform: translate(0, 0)
  }
}
